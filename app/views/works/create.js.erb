<% if @work.errors.any? %>
  $('<div id="errors"><p>Please correct the following <%= pluralize(@work.errors.count, "error") %>:</p><ul><% @work.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %></ul></div>').insertBefore('div.remoteform h2');
<% else %>
  $('div#errors').remove();
  $('.table-fill tbody').prepend('<tr><td class="td-link"><%= link_to "View", @work %></td><td><%= link_to @work.project, @work.project %></td><td><%= @work.user %></td><td><%= @work.datetimeperformed.strftime('%m/%d/%Y %H:%M') %></td><td><%= @work.hours %> hr</td></tr>');
<% end %>
